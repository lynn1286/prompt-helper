{
  "name": "prompt-helper",
  "version": "1.0.4",
  "private": true,
  "description": "在任何 AI 网页上，都能快速检索、套用、填变量并插入 Prompt，同时支持收藏、标签、版本管理与分享。",
  "keywords": [
    "chrome-extension",
    "prompt",
    "ai",
    "chatgpt",
    "gemini",
    "claude",
    "kimi",
    "deepseek"
  ],
  "homepage": "https://github.com/lynn1286/prompt-helper#readme",
  "bugs": {
    "url": "https://github.com/lynn1286/prompt-helper/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lynn1286/prompt-helper.git"
  },
  "license": "MIT",
  "author": "lynn1286",
  "type": "module",
  "scripts": {
    "build": "tsc --noEmit && vite build",
    "commit": "git-cz",
    "dev": "vite",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,css,scss,md}\"",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "prepare": "husky",
    "preview": "vite preview"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "npx tsc --noEmit"
    ],
    "*.{css,scss}": [
      "prettier --write"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "i18next": "^25.7.3",
    "i18next-browser-languagedetector": "^8.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^16.5.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@crxjs/vite-plugin": "^2.0.0-beta.18",
    "@eslint/js": "^9.23.0",
    "@tailwindcss/vite": "^4.1.18",
    "@types/chrome": "^0.0.246",
    "@types/node": "^22.13.17",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "@vitejs/plugin-react": "^5.1.2",
    "commitizen": "^4.3.1",
    "cz-git": "^1.12.0",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "postcss": "^8.4.27",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-packagejson": "^2.5.10",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.1.6",
    "typescript-eslint": "^8.29.0",
    "vite": "^6.4.1"
  }
}
